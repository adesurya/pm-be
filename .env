# .env.example
NODE_ENV=development
PORT=3000

# Master Database (for tenant management)
MASTER_DB_HOST=localhost
MASTER_DB_PORT=3306
MASTER_DB_NAME=news_cms_master
MASTER_DB_USER=root
MASTER_DB_PASS=

# Tenant Database Template
TENANT_DB_HOST=localhost
TENANT_DB_PORT=3306
TENANT_DB_USER=root
TENANT_DB_PASS=

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_minimum_256_bits
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your_refresh_token_secret_here

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Security Configuration
SESSION_SECRET=your_session_secret_here_minimum_256_bits
CSRF_SECRET=your_csrf_secret_here

# File Upload Configuration
UPLOAD_MAX_SIZE=5242880
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,image/webp

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Application Configuration
APP_NAME=News CMS SaaS
APP_URL=http://localhost:3000
ADMIN_EMAIL=admin@yourdomain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security Headers
CSP_REPORT_URI=/api/csp-report

# Optional: For production automation (not needed for development)
# CLOUDFLARE_API_TOKEN=your_cloudflare_api_token
# CLOUDFLARE_ZONE_ID=your_zone_id
# SERVER_IP=your_server_ip